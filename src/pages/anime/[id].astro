---
export const prerender = false;
import Layout from '../../layouts/Layout.astro';
import AnimeList from '../../components/common/AnimeList.astro';
import { getAnimeById, getAnimeCharacters, getAnimeRecommendations } from '../../api/animeApi';
import type { Anime, AnimeCharacter } from '../../types/anime';

const { id } = Astro.params;

if (!id) {
  return Astro.redirect('/404');
}

let anime: Anime | null = null;
let characters: AnimeCharacter[] = [];
let recommendations: any = null;
let errorMessage = '';

try {
  anime = await getAnimeById(parseInt(id));
  
  [characters, recommendations] = await Promise.all([
    getAnimeCharacters(parseInt(id)).catch(() => []),
    getAnimeRecommendations(parseInt(id)).catch(() => null)
  ]);
} catch (error) {
  console.error('Error fetching anime details:', error);
  errorMessage = 'Gagal memuat detail anime.';
}

if (!anime && !errorMessage) {
  return Astro.redirect('/404');
}

const title = anime?.title_english || anime?.title || 'Anime Detail';
const imageUrl = anime?.images.webp.large_image_url || anime?.images.jpg.large_image_url;
---

<Layout 
  title={`${title} - AnimeYuk`}
  description={anime?.synopsis || `Details for ${title}`}
>
  {errorMessage ? (
    <div class="bg-red-900/20 border border-red-500 rounded-lg p-6 text-center">
      <p class="text-red-400">{errorMessage}</p>
    </div>
  ) : anime && (
    <div>
      <div class="relative -mx-4 -mt-8 mb-8">
        <!-- Background Image with Overlay -->
        <div class="absolute inset-0 overflow-hidden">
          <img 
            src={imageUrl} 
            alt={title}
            class="w-full h-full object-cover opacity-20 blur-2xl scale-110"
          />
          <div class="absolute inset-0 bg-linear-to-b from-gray-950/50 via-gray-950/80 to-gray-950"></div>
        </div>

        <div class="relative container mx-auto px-4 pt-12 pb-8">
          <div class="flex flex-col md:flex-row gap-8">
            <div class="shrink-0">
              <img 
                src={imageUrl}
                alt={title}
                class="w-full md:w-80 rounded-lg shadow-2xl border-2 border-gray-800"
              />
            </div>

            <div class="flex-1">
              <h1 class="text-4xl md:text-5xl font-bold mb-3 text-white">
                {title}
              </h1>
              
              {anime.title_japanese && (
                <p class="text-xl text-gray-400 mb-4">{anime.title_japanese}</p>
              )}

              <div class="flex flex-wrap gap-3 mb-6">
                {anime.score && (
                  <div class="bg-blue-600 px-4 py-2 rounded-lg flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/>
                    </svg>
                    <span class="font-bold text-lg">{anime.score.toFixed(2)}</span>
                  </div>
                )}
                
                {anime.rank && (
                  <div class="bg-yellow-600 px-4 py-2 rounded-lg">
                    <span class="font-bold">#{anime.rank} Ranked</span>
                  </div>
                )}
                
                {anime.popularity && (
                  <div class="bg-purple-600 px-4 py-2 rounded-lg">
                    <span class="font-bold">#{anime.popularity} Popularity</span>
                  </div>
                )}
              </div>

              <div class="grid grid-cols-2 md:grid-cols-3 gap-4 bg-gray-900/80 backdrop-blur-sm p-6 rounded-lg border border-gray-800">
                {anime.type && (
                  <div>
                    <p class="text-gray-500 text-sm mb-1">Type</p>
                    <p class="text-white font-semibold">{anime.type}</p>
                  </div>
                )}
                
                {anime.episodes && (
                  <div>
                    <p class="text-gray-500 text-sm mb-1">Episodes</p>
                    <p class="text-white font-semibold">{anime.episodes}</p>
                  </div>
                )}
                
                {anime.status && (
                  <div>
                    <p class="text-gray-500 text-sm mb-1">Status</p>
                    <p class="text-white font-semibold">{anime.status}</p>
                  </div>
                )}
                
                {anime.aired?.string && (
                  <div>
                    <p class="text-gray-500 text-sm mb-1">Aired</p>
                    <p class="text-white font-semibold">{anime.aired.string}</p>
                  </div>
                )}
                
                {anime.season && anime.year && (
                  <div>
                    <p class="text-gray-500 text-sm mb-1">Season</p>
                    <p class="text-white font-semibold capitalize">{anime.season} {anime.year}</p>
                  </div>
                )}
                
                {anime.duration && (
                  <div>
                    <p class="text-gray-500 text-sm mb-1">Duration</p>
                    <p class="text-white font-semibold">{anime.duration}</p>
                  </div>
                )}
                
                {anime.rating && (
                  <div class="col-span-2">
                    <p class="text-gray-500 text-sm mb-1">Rating</p>
                    <p class="text-white font-semibold">{anime.rating}</p>
                  </div>
                )}
              </div>

              {anime.trailer?.embed_url && (
                <div class="mt-6">
                  <a 
                    href={anime.trailer.url || '#'}
                    target="_blank"
                    class="inline-flex items-center gap-2 bg-red-600 hover:bg-red-700 px-6 py-3 rounded-lg font-semibold transition-colors"
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M8 5v14l11-7z"/>
                    </svg>
                    Watch Trailer
                  </a>
                </div>
              )}
            </div>
          </div>
        </div>
      </div>

      {anime.genres && anime.genres.length > 0 && (
        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4">Genres</h2>
          <div class="flex flex-wrap gap-2">
            {anime.genres.map((genre) => (
              <a 
                href={`/genre/${genre.mal_id}`}
                class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded-lg transition-colors"
              >
                {genre.name}
              </a>
            ))}
          </div>
        </section>
      )}

      {anime.synopsis && (
        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4">Synopsis</h2>
          <div class="bg-gray-900 border border-gray-800 rounded-lg p-6">
            <p class="text-gray-300 leading-relaxed whitespace-pre-line">{anime.synopsis}</p>
          </div>
        </section>
      )}

      {anime.background && (
        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4">Background</h2>
          <div class="bg-gray-900 border border-gray-800 rounded-lg p-6">
            <p class="text-gray-300 leading-relaxed whitespace-pre-line">{anime.background}</p>
          </div>
        </section>
      )}

      <div class="grid md:grid-cols-2 gap-6 mb-8">
        {anime.studios && anime.studios.length > 0 && (
          <section>
            <h2 class="text-2xl font-bold mb-4">Studios</h2>
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-4">
              <div class="flex flex-wrap gap-2">
                {anime.studios.map((studio) => (
                  <span class="bg-gray-800 px-3 py-1.5 rounded-lg text-sm">
                    {studio.name}
                  </span>
                ))}
              </div>
            </div>
          </section>
        )}

        {anime.producers && anime.producers.length > 0 && (
          <section>
            <h2 class="text-2xl font-bold mb-4">Producers</h2>
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-4">
              <div class="flex flex-wrap gap-2">
                {anime.producers.map((producer) => (
                  <span class="bg-gray-800 px-3 py-1.5 rounded-lg text-sm">
                    {producer.name}
                  </span>
                ))}
              </div>
            </div>
          </section>
        )}
      </div>

      {characters && characters.length > 0 && (
        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4">Characters</h2>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
            {characters.slice(0, 12).map((char) => (
              <div class="bg-gray-900 border border-gray-800 rounded-lg overflow-hidden hover:border-blue-500 transition-colors">
                <img 
                  src={char.character.images.webp.image_url || char.character.images.jpg.image_url}
                  alt={char.character.name}
                  class="w-full aspect-3/4 object-cover"
                  loading="lazy"
                />
                <div class="p-3">
                  <p class="font-semibold text-sm line-clamp-2 mb-1">{char.character.name}</p>
                  <p class="text-xs text-gray-400">{char.role}</p>
                </div>
              </div>
            ))}
          </div>
        </section>
      )}

      {recommendations?.data && recommendations.data.length > 0 && (
        <section class="mb-8">
          <h2 class="text-2xl font-bold mb-4">Recommendations</h2>
          <AnimeList 
            animes={recommendations.data.slice(0, 10).map((rec: any) => rec.entry)} 
          />
        </section>
      )}

      <section class="mb-8">
        <h2 class="text-2xl font-bold mb-4">Statistics</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {anime.scored_by && (
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-4 text-center">
              <p class="text-3xl font-bold text-blue-400">{anime.scored_by.toLocaleString()}</p>
              <p class="text-gray-400 text-sm mt-1">Users Scored</p>
            </div>
          )}
          
          {anime.members && (
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-4 text-center">
              <p class="text-3xl font-bold text-purple-400">{anime.members.toLocaleString()}</p>
              <p class="text-gray-400 text-sm mt-1">Members</p>
            </div>
          )}
          
          {anime.favorites && (
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-4 text-center">
              <p class="text-3xl font-bold text-pink-400">{anime.favorites.toLocaleString()}</p>
              <p class="text-gray-400 text-sm mt-1">Favorites</p>
            </div>
          )}
          
          {anime.rank && (
            <div class="bg-gray-900 border border-gray-800 rounded-lg p-4 text-center">
              <p class="text-3xl font-bold text-yellow-400">#{anime.rank}</p>
              <p class="text-gray-400 text-sm mt-1">Ranked</p>
            </div>
          )}
        </div>
      </section>

      <section class="mb-8">
        <div class="bg-gray-900 border border-gray-800 rounded-lg p-6">
          <a 
            href={anime.url}
            target="_blank"
            class="inline-flex items-center gap-2 text-blue-400 hover:text-blue-300 font-medium"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
              <polyline points="15 3 21 3 21 9"></polyline>
              <line x1="10" y1="14" x2="21" y2="3"></line>
            </svg>
            View on MyAnimeList
          </a>
        </div>
      </section>
    </div>
  )}
</Layout>