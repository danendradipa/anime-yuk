---
const currentPath = Astro.url.pathname;
import ThemeToggle from "../react/ThemeToggle";

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/anime/top', label: 'Top Anime' },
  { href: '/search', label: 'Search' },
];
---

<header class="sticky top-0 z-50 w-full border-b border-gray-200 bg-white/80 backdrop-blur-md transition-colors duration-300 dark:border-gray-800 dark:bg-gray-950/80">
  <nav class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between">
      
      <a href="/" class="group text-2xl font-bold tracking-tight text-gray-900 transition-colors hover:text-blue-600 dark:text-white dark:hover:text-blue-400">
        Anime<span class="text-blue-600 dark:text-blue-500">Yuk</span>
      </a>

      <div class="flex items-center gap-6">
        <ul class="flex items-center gap-6 text-sm font-medium">
          {navItems.map((item) => {
            const isActive = currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href));
            
            return (
              <li>
                <a
                  href={item.href}
                  class:list={[
                    'transition-colors duration-200',
                    isActive 
                      ? 'text-blue-600 dark:text-blue-400' // Active State
                      : 'text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400' // Inactive State
                  ]}
                >
                  {item.label}
                </a>
              </li>
            );
          })}
        </ul>

        <div class="h-4 w-px bg-gray-200 dark:bg-gray-800 hidden sm:block"></div>

        <ThemeToggle client:load />
      </div>
    </div>
  </nav>
</header>