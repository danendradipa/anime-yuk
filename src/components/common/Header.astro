---
const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/anime/top', label: 'Top Anime' },
  { href: '/search', label: 'Search' },
];
---

<header class="bg-gray-900 border-b border-gray-800 sticky top-0 z-50 backdrop-blur-sm bg-opacity-95">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex items-center justify-between">
      <!-- Logo -->
      <a href="/" class="text-2xl font-bold text-blue-500 hover:text-blue-400 transition-colors">
        AnimeYuk
      </a>

      <!-- Navigation -->
      <ul class="flex items-center gap-6">
        {navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                'hover:text-blue-400 transition-colors font-medium',
                currentPath === item.href ? 'text-blue-400' : 'text-gray-300'
              ]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </nav>
</header>